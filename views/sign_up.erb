<div class="container">
  <form class="col-lg-5" action="/signup" method="post">
    <div class="controls">
      <div class="form-group">
        <input class="form-control input-lg" type="text" name="name" placeholder="名前を入力"><br>
        <input class="form-control input-lg" type="password" name="password" placeholder="パスワードを入力"><br>
        <input class="form-control input-lg" type="password" name="password_confirmation" placeholder="パスワードの確認">
      </div>
      <div class="form-group col-lg-4">
        <input class="form-control col-lg-4" type="submit" value="新規登録">
      </div>
    </div>
  </form>
</div>